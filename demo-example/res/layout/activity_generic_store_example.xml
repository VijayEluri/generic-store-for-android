<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:webimageview="http://schemas.android.com/apk/res/com.wareninja.opensource.droidfu.widgets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
	android:orientation="vertical"
    android:background="@drawable/white" 
    >

    <TextView android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="picture from the net" 
        />
    <com.wareninja.opensource.droidfu.widgets.WebImageView
		android:id="@+id/img_webview"
		android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
		android:src="@drawable/placeholder_default"
		android:layout_marginTop="@dimen/margin_size_small" 
		/>
    
    <Button android:id="@+id/button_loadobject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emulate object storage"
        android:tag="button_loadobject"
        android:layout_marginTop="@dimen/margin_size_extralarge"
        />
    <TextView android:id="@+id/txt_loadobject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:singleLine="false"
        android:layout_marginTop="@dimen/margin_size_medium" 
        android:layout_marginLeft="@dimen/margin_size_medium" 
        android:gravity="left|center_vertical"
    	android:layout_gravity="left|center_vertical"
        />
</LinearLayout>